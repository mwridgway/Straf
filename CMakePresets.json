{
  "version": 7,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vs2022-x64-debug",
      "displayName": "VS2022 x64 Debug",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_BUILD_TYPE": "Debug",
        "STRAF_USE_VCPKG": "ON"
      }
    },
    {
      "name": "vs2022-x64-debug-vosk",
      "displayName": "VS2022 x64 Debug with Vosk",
      "generator": "Visual Studio 17 2022", 
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build-vosk",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_BUILD_TYPE": "Debug",
        "STRAF_USE_VCPKG": "ON"
      },
      "environment": {
        "VOSK_INCLUDE_DIR": "C:/tools/vosk",
        "VOSK_LIBRARY": "C:/tools/vosk/libvosk.lib"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "vs2022-x64-debug",
      "configuration": "Debug",
      "targets": [
        "StrafAgent"
      ]
    },
    {
      "name": "debug-vosk",
      "configurePreset": "vs2022-x64-debug-vosk",
      "configuration": "Debug",
      "targets": [
        "StrafAgent"
      ]
    }
  ],
  "testPresets": []
}
